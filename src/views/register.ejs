<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %>

<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="register-section">
    <form action="\register" method="post">
      <div class="form-container">
      <h1>Register</h1>
        <input class="input-box" autocomplete="off" type="text" name="firstName" placeholder="First Name" >
        <input class="input-box" autocomplete="off" type="text" name="lastName" placeholder="Last Name">
        <input class="input-box" autocomplete="off" type="email" name="email" placeholder="Mail Id">
        <input class="input-box" autocomplete="off" type="password" name="password" placeholder="Password">
        <input class="input-box" autocomplete="off" type="password" name="confirmPassword" placeholder="Confirm Password">
        <button class="input-box" id="submit">Register</button>
        <% if(data.hasOwnProperty('status')){ %>
          <% if(data['status']==true){ %> 
            <div class="message-container" style="background-color: rgb(118, 230, 118);">
              <h3 class="message">Registration Success. You can login</h3>
            </div>
          <% } %> 
          <% if(data['status']==false){ %>
            <div class="message-container" style="background-color: rgb(243, 157, 157);">
              <h3 class="message">Registration Failed</h3>
            </div>
          <% } %>
        <% } %>
      </div>
    </form>
    <div class="image-container">
      <img src="images/EventHub.png" alt="">
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="js/app.js"></script>
</body>
</html>