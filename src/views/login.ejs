<!DOCTYPE html>
<html lang="en">

<%- include('partials/header.ejs') %>

<body>
  <%- include('./partials/navbar.ejs') %>

  <div class="login-section">
    <form action="\login" method="post">
      <div class="form-container">
        <h1>Login</h1>
        <input class="input-box" autocomplete="off" type="email" name="email" placeholder="Mail Id">
        <input class="input-box" autocomplete="off" type="password" name="password" placeholder="Password">
        <button type="submit" id="submit" class="input-box">Login</button>
        <% if(data.hasOwnProperty('status') && data['status']==false){ %>
          <div class="message-container" style="background-color: rgb(243, 157, 157);">
            <h3 class="message">Invalid Login</h3>
          </div>
        <% } %>
      </div>
    </form>
    <div class="image-container">
      <img src="images/EventHub.png" alt="EventHub image">
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="js/app.js"></script>
</body>

</html>